---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="inline-flex items-center mb-3 mx-1 md:mb-0 gap-2 py-2 px-3 bg-gray-700 text-primary text-sm font-medium rounded-md border border-tertiary hover:bg-gray-800 hover:scale-105 transition-all duration-300 cursor-pointer"
>
  <slot />
</a>
