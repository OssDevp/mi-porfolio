---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  class="text-primary bg-gray-700 hover:bg-gray-800 hover:scale-105 border border-tertiary font-medium rounded-lg text-sm px-3 py-2 text-center inline-flex items-center transition-all duration-300 gap-2"
  href={href}
  target="_blank"
>
  <slot />
</a>
