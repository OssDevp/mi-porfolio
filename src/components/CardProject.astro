---
import Typescript from "@/assets/icons/Typescript.astro";
import React from "@/assets/icons/React.astro";
import Node from "@/assets/icons/Node.astro";
import Express from "@/assets/icons/Express.astro";
import MongoDB from "@/assets/icons/MongoDB.astro";

const Projects = [
  {
    title: "UpTask",
    href: "/uptask.png",
    description:
      "UpTask es una aplicacion para dev donde pueden monitorear sus proyectos y tareas. Ya sea con colaboradores o de manera individual.",
    icons: [Typescript, React, Node, Express, MongoDB],
  },
  {
    title: "Proyecto 2",
    href: "/uptask.png",
    description: "Descripción del proyecto 2",
    icons: [],
  },
  {
    title: "Proyecto 3",
    href: "/uptask.png",
    description: "Descripción del proyecto 3",
    icons: [],
  },
];
---

<div
  id="proyectos"
  class="mt-20 mb-10 grid grid-cols-1 px-4 gap-4 sm:grid-cols-2 md:grid-cols-3"
>
  {
    Projects.map((project) => (
      <article class="rounded-md border border-amber-100 p-4 hover:scale-105 transition-all duration-300">
        <div class="min-w-40 overflow-hidden rounded-md">
          <img
            class="object-cover object-center"
            src={project.href}
            alt={project.title}
          />
        </div>
        <div class="p-2 flex flex-col jus">
          <div>
            <h3 class="mt-0.5 text-lg font-bold text-primary">
              {project.title}
            </h3>
            <p class="text-tertiary text-sm">{project.description}</p>
          </div>
          <div class="mt-4 flex items-center gap-2">
            {project.icons.map((Icon) => (
              <Icon class="size-6" />
            ))}
          </div>
        </div>
      </article>
    ))
  }
</div>
