---
const links = [
  { label: "inicio", title: "Inicio", href: "/" },
  { label: "proyectos", title: "Proyectos", href: "/#projects" },
  { label: "habilidades", title: "Habilidades", href: "/#skill" },
  { label: "sobre-mi", title: "Sobre Mi", href: "/#about" },
];
---

<header class="flex items-center justify-center py-5 px-5">
  <nav id="nav" class="flex gap-3">
    {
      links.map((link) => (
        <a
          class="text-[#aaaa91] hover:text-[#FF6F61] hover:scale-110 transition"
          aria-label=`${link.label}`
          href=`${link.href}`
        >
          {link.title}
        </a>
      ))
    }
  </nav>
</header>

<script>
  const nav = document.getElementById("nav");
  
  window.addEventListener("scroll", () => {
    console.log(window.scrollY);
    if (nav === null) return;
    if (window.scrollY > 20) {
      nav.classList.add("fixed", "top-2", "border", "shadow-md", "py-2", "px-5", "rounded-md");
    } else {
      nav.classList.remove("fixed", "top-2", "border", "shadow-md", "py-2", "px-5", "rounded-md");
    }
  })
</script>